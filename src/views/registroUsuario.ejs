<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/fontawesome-free-6.4.0-web/css/all.min.css">
    <link rel="stylesheet" href="/css/registro.css">
    <title>REGISTRO USUARIO</title>
</head>
<body>

    <%- include('./partials/menuTopo.ejs'); %>
    
        <form action="/registroservice" method="post">

            <div class="titulo">
                <label>
                    <p class="titulo_escrita"><i class="fa-solid fa-address-card fa-xl"></i> Registro Usuario</p>
                </label>
            </div>
            
            <div class="geral" id="geral">

                <div class="conteiner" id="conteiner">

                    <div class="parte_um">
                        <div class="titulo_coluna">
                            <p>DADOS PESSOAIS</p>
                        </div>
                        <div class="selecionadores">
                            <label>Nome: <br>
                                <input type="text" name="nome" placeholder="Fabio">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Sobrenome: <br>
                                <input type="text" name="sobrenome" placeholder="Penko">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Nick Usuario: <br>
                                <input type="text" name="usuario" placeholder="Penko_Felisbino">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>RG: <br>
                                <input type="number" name="rg" placeholder="4454768980">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>CPF: <br>
                                <input type="number" name="cpf" placeholder="36978456812">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Data Nascimento: <br>
                                <input type="text" name="nascimento" placeholder="17121988">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Endereço: <br>
                                <input type="text" name="endereco" placeholder="teste ">
                            </label>
                        </div>
                    </div>
                    <div class="parte_dois">
                        <div class="titulo_coluna">
                            <p>DADOS EMPRESA</p>
                        </div>
                        <div class="selecionadores">
                            <label>Admissão; <br>
                                <input type="text" name="admissao" placeholder="24032023">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Demissão: <br>
                                <input type="text" name="demissao" placeholder="DEMISSÃO">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Salario: <br>
                                <input type="number" name="salario" placeholder="2000">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Função: <br>
                                <input type="text" name="funcao" placeholder="Operador"><br>
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Operador: <br>
                                <select name="condicao">
                                    <option value="1">ADM</option>
                                    <option value="2">Normal</option>
                                </select>
                            </label>
                        </div>
                        <div>
                            <p class="informacao">* Para preenxer o campo DEMISSÃO em uma posterioridade, acesse a area editar cadastro de funcionarios</p>
                        </div>
                    </div>
    
                    <div class="parte_tres">
                        <div class="titulo_coluna">
                            <p>DADOS USUARIO</p>
                        </div>
                        <div class="selecionadores">
                            <label>Senha: <br>
                                <input type="password" name="senha" placeholder="Abcd1234!@#">
                            </label>
                        </div>
                        <div class="selecionadores">
                            <label>Confirma Senha: <br>
                                <input type="password" name="confirmarsenha" placeholder="Abcd1234!@#">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="botoes">
                <button class="botoes_diversos" onclick="imprimir()"><i class="fa-solid fa-print fa-xl"></i> Impressão</button>
                <button type="button" class="botoes_diversos" onclick="limpar()"><i class="fa-solid fa-eraser fa-xl"></i> Limpar</button>
            </div>
            <div class="botao">
                <button type="submit"><i class="fa-regular fa-floppy-disk fa-xl"></i> Salvar</button>
            </div>
            
        </form>
</body>

<script>
    function imprimir(){

        const impr_tabela = document.getElementById('conteiner').innerHTML

        let estilo = "<style>"
        estilo += "table{width: 100%; font: 25px Clibri}"
        estilo += "table, th, td{border: solid 2px #888; border-collapse: collapse";
        estilo += "padding: 4px 8px; text-align: center}"
        estilo += "</style>"

        const  win = window.open('','', 'heigth=700, width=700')

        win.document.write('<html><head>')
        win.document.write('<title>Teste</title>')
        win.document.write(estilo)
        win.document.write('</head>')
        win.document.write('<body>')
        win.document.write(impr_tabela)
        win.document.write('</body></html>')

        win.print()
        win.close()
    }
</script>
</html>